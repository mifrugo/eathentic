<h1><%= @restaurant.name %></h1>
<p><%= @restaurant.description %></p>

<h1>Rate it</h1>
<%= simple_form_for([@restaurant, @review]) do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit %>
<% end %>

<% @restaurant.reviews.each do |review| %>
  <%= review.rating %>
  <%= review.content %>
<% end %>