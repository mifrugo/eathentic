          <li><%= link_to 'Admin', rails_admin_path, class: 'font-weight-bold' %></li>
        <% end %>

        <li>
          <a href="#" data-toggle="modal" data-target="#favoriteModal" data-controller="sidebar" data-action="click->sidebar#click">Your favorites</a>
