<div class="modal fade" id="addDishModal" tabindex="-1" role="dialog" aria-labelledby="loginModalTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="loginModalTitle">Add a dish</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="form-inputs">
        <%= simple_form_for (@restaurant), url: add_dish_path, method: :post do |f| %>
          <div class="">
            <%= f.input :dishes, collection: Dish.all %>
          </div>
        <%= f.button :submit, "Add it", class: 'btn btn btn btn-secondary btn-rounded d-block w-50 mx-auto' %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
